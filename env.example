# ==============================================================================
# PROJECT WIZARD ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env and customize the values for your project
# The wizard will use these values as defaults

# Project Configuration
PROJECT_TYPE=python              # Options: django, react, node, python, rust, go, custom
PROJECT_NAME=my-awesome-project  # Your project name (no spaces)
PROJECT_DESCRIPTION="A revolutionary project that changes everything"

# GitHub Configuration
GITHUB_USERNAME=your-github-username
GITHUB_EMAIL=your-email@example.com

# Project Location
PROJECT_DIR=~/github/my-awesome-project  # Where to create the project

# Python Specific
PYTHON_VERSION=python3           # Python executable name
VENV_NAME=venv                   # Virtual environment name
APP_NAME=myapp                   # Django app name (for Django projects)

# Node/React Specific
NODE_VERSION=18                  # Node version to use
USE_TYPESCRIPT=true              # Use TypeScript for React/Node projects
USE_VITE=true                    # Use Vite for React projects
FRAMEWORK=express                # Node framework: express, fastify, koa

# Build Tools
SETUP_DOCKER=true                # Create Docker configuration
SETUP_CI=true                    # Setup GitHub Actions CI/CD
SETUP_TESTS=true                 # Setup testing framework

# Repository Settings
LICENSE=MIT                      # Options: MIT, Apache-2.0, GPL-3.0, BSD-3-Clause, None
PRIVATE_REPO=false               # Make repository private on GitHub
BRANCH_NAME=main                 # Default branch name

# Advanced Options
NON_INTERACTIVE=false            # Run without prompts (use all env vars)
AUTO_INSTALL_DEPS=true           # Automatically install missing dependencies
CREATE_GITHUB_REPO=true          # Automatically create GitHub repository
PUSH_TO_GITHUB=true              # Automatically push initial commit

# Development Environment
SETUP_VSCODE=false               # Create VS Code workspace settings
SETUP_PRETTIER=true              # Setup Prettier code formatting
SETUP_ESLINT=true                # Setup ESLint (for JS/TS projects)
SETUP_PRE_COMMIT=false           # Setup pre-commit hooks

# Database Configuration (for applicable projects)
DATABASE_TYPE=sqlite             # Options: sqlite, postgresql, mysql, mongodb
DATABASE_NAME=myproject_db       # Database name
DATABASE_USER=dbuser             # Database username
DATABASE_PASSWORD=securepassword # Database password
DATABASE_HOST=localhost          # Database host
DATABASE_PORT=5432               # Database port

# API Configuration
API_PREFIX=/api/v1               # API endpoint prefix
ENABLE_CORS=true                 # Enable CORS for APIs
ENABLE_SWAGGER=true              # Enable Swagger/OpenAPI documentation

# Security
ENABLE_SECURITY_HEADERS=true    # Add security headers
ENABLE_RATE_LIMITING=true        # Enable rate limiting
JWT_SECRET=your-jwt-secret-here  # JWT secret for authentication

# Monitoring & Logging
SETUP_LOGGING=true               # Setup structured logging
LOG_LEVEL=info                   # Log level: debug, info, warning, error
SETUP_MONITORING=false           # Setup monitoring (Prometheus/Grafana)

# Custom Scripts
RUN_CUSTOM_SCRIPT=false          # Run custom initialization script
CUSTOM_SCRIPT_PATH=./custom-init.sh  # Path to custom script
